<Window x:Class="Task4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox Name="listYears" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="selectYear" Content="Выбрать" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Width="75" Click="selectYear_Click"/>
        <DataGrid x:Name="dgSales" HorizontalAlignment="Left" Height="363" Margin="151,47,0,0" VerticalAlignment="Top" Width="633">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="Name" Header="Страна"/>
                <DataGridTextColumn x:Name="CountOrders" Header="Количество заказов"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
